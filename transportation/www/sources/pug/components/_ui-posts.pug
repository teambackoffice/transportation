mixin post-classic(obj)
  // Post Classic
  article.post.post-classic(class=obj.mod)&attributes(attributes)
    .post-classic-figure: +jpg(obj.img)
    .post-classic-content
      p.post-classic-title
        if(obj.blogPost == true)
          =obj.title
        else
          a(href=links.post)=obj.title
    time.post-classic-time(datetime=obj.time.datetime)=obj.time.dateText

mixin post-modern(obj)
  // Post Modern
  article.post.post-modern(class=obj.mod)&attributes(attributes)
    if(obj.img)
      +jpg(obj.img, 'post-modern-image')
    .post-modern-content
      .post-modern-center
        if(obj.video)
          .post-modern-play-2: a.icon.mdi.mdi-play(data-lightbox='iframe', href=obj.video)
        else
          .post-modern-badge=obj.tag ? obj.tag : 'News'
        p.post-modern-title: a(href=links.post)=obj.title
      .group-xmd
        .post-modern-views
          span.icon.mdi.mdi-eye
          span=obj.views ? obj.views : '253'
        .post-modern-time
          if(obj.time)
            time(datetime=obj.time.datetime)=obj.time.dateText
          else
            time(datetime='2018-04-20') April 20, 2018
    .post-modern-dummy

