  // Blockquote
  section.section.section-sm.section-last.bg-default.section-style-2.text-md-left
    .container
      .row.row-50
        .col-lg-10.col-xl-7
          h4 Blockquote
          +quote-classic({
            text: 'Welcome to our wonderful world. We sincerely hope that each and every user entering our website will find exactly what you need.',
