        .col-lg-4
          .box-typography-description
            .box-typography-description-item
              p.heading-7 Google Fonts
              h3.text-transform-none.text-spacing-50 Roboto
            .box-typography-description-item
              p.heading-7 Used colors
              .box-color
                .box-color-line
                  .box-color-item.bg-primary
                  .box-color-item.bg-secondary
